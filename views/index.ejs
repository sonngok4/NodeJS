<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h4 class="mb-0">Danh sách Đặt Chỗ</h4>
    <div>
      <a href="/create" class="btn btn-primary">Đặt Chỗ Mới</a>
      <a href="/agency" class="btn btn-secondary">Quản lý đặt chỗ</a>
    </div>
  </div>
  <div class="card-body">
    <% if (message) { %>
      <div class="alert alert-<%= messageType === 'error' ? 'danger' : 'success' %>">
        <%= message %>
      </div>
      <% } %>

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Tên Khách Hàng</th>
                <th>Ngày</th>
                <th>Giờ</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach(booking=> { %>
                <tr>
                  <td>
                    <%= booking._id %>
                  </td>
                  <td>
                    <%= booking.customerName %>
                  </td>
                  <td>
                    <%= moment(booking.date).format('DD/MM/YYYY') %>
                  </td>
                  <td>
                    <%= booking.time %>
                  </td>
                  <td>
                    <span class="badge status-<%= booking.status.toLowerCase() %>">
                      <%= booking.status %>
                    </span>
                  </td>
                  <td>
                    <% if (booking.status !=='Cancelled' ) { %>
                      <a href="/edit/<%= booking._id %>" class="btn btn-primary btn-sm">Sửa</a>
                      <form action="/cancel/<%= booking._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                          onclick="return confirm('Bạn có chắc muốn hủy đặt chỗ này?')">
                          Hủy
                        </button>
                      </form>
                      <% } %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
  </div>
</div>