<!-- views/edit.ejs -->

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Chỉnh Sửa Đặt Chỗ</h4>
        </div>
        <div class="card-body">
            <form action="/edit/<%= booking._id %>" method="POST">
                <div class="mb-3">
                    <label for="customerName" class="form-label">Tên Khách Hàng</label>
                    <input type="text" class="form-control" id="customerName" name="customerName"
                        value="<%= booking.customerName %>" required>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">Ngày</label>
                    <input type="date" class="form-control" id="date" name="date"
                        value="<%= moment(booking.date).format('YYYY-MM-DD') %>" required>
                </div>
                <div class="mb-3">
                    <label for="time" class="form-label">Giờ</label>
                    <input type="time" class="form-control" id="time" name="time" value="<%= booking.time %>" required>
                </div>
                <button type="submit" class="btn btn-primary">Cập Nhật</button>
                <a href="/" class="btn btn-secondary">Quay Lại</a>
            </form>
        </div>
    </div>