<!-- views/agency.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Quản lý đặt chỗ - Agency</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .booking-row { transition: all 0.3s ease; }
        .booking-row:hover { background-color: #f8f9fa; }
        .inline-form { display: inline-block; margin-right: 10px; }
        .agency-notes { width: 150px; margin-right: 5px; }
        .status-badge {
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
        }
        .status-Pending { background-color: #ffeeba; color: #856404; }
        .status-Confirmed { background-color: #d4edda; color: #155724; }
        .status-Rejected { background-color: #f8d7da; color: #721c24; }
        .status-Cancelled { background-color: #e2e3e5; color: #383d41; }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Quản lý đặt chỗ</h2>
            </div>
            <div class="card-body">
                <% if (message) { %>
                <div class="alert alert-<%= messageType %> alert-dismissible fade show">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Giờ đặt</th>
                                <th>Trạng thái</th>
                                <th>Ghi chú</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(function(booking) { %>
                            <tr class="booking-row">
                                <td><%= booking.customerName %></td>
                                <td><%= moment(booking.date).format('DD/MM/YYYY') %></td>
                                <td><%= booking.time %></td>
                                <td>
                                    <span class="status-badge status-<%= booking.status %>">
                                    <% if (booking.status === 'Pending') { %>
                                        Chờ xác nhận
                                    <% } else if (booking.status === 'Confirmed') { %>
                                        Đã xác nhận
                                    <% } else if (booking.status === 'Rejected') { %>
                                        Đã từ chối
                                    <% } else { %>
                                        Đã hủy
                                    <% } %>
                                    </span>
                                </td>
                                <td><%= booking.notes || '' %></td>
                                <td>
                                    <% if (booking.status === 'Pending') { %>
                                    <div class="btn-group">
                                        <form action="/agency/confirm/<%= booking._id %>" method="POST" class="inline-form">
                                            <input type="text" name="agencyNotes" class="form-control form-control-sm" 
                                                placeholder="Ghi chú" required>
                                            <button type="submit" class="btn btn-success btn-sm">Xác nhận</button>
                                        </form>
                                        <form action="/agency/reject/<%= booking._id %>" method="POST" class="inline-form">
                                            <input type="text" name="agencyNotes" class="form-control form-control-sm" 
                                                placeholder="Lý do từ chối" required>
                                            <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                                        </form>
                                    </div>
                                    <% } else if (booking.status === 'Confirmed') { %>
                                    <small class="text-success">
                                        Xác nhận: <%= moment(booking.confirmedAt).format('DD/MM/YYYY HH:mm') %>
                                        <% if (booking.agencyNotes) { %>
                                        <br>Ghi chú: <%= booking.agencyNotes %>
                                        <% } %>
                                    </small>
                                    <% } else if (booking.status === 'Rejected') { %>
                                    <small class="text-danger">
                                        Từ chối: <%= moment(booking.rejectedAt).format('DD/MM/YYYY HH:mm') %>
                                        <% if (booking.agencyNotes) { %>
                                        <br>Lý do: <%= booking.agencyNotes %>
                                        <% } %>
                                    </small>
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <a href="/" class="btn btn-primary">Quay về trang chủ</a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>